<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#1b1c38"
  android:fitsSystemWindows="true"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/connected"
    android:layout_width="wrap_content"
    android:text="@string/connected"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center"
    android:visibility="gone"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textColor="@color/online_green"
    android:layout_height="40dp"/>

  <View
    android:id="@+id/hr"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="40dp"
    android:background="#cbccde"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#13152b"
    android:paddingBottom="4dp"
    app:layout_constraintBottom_toTopOf="@id/viewPager"
    app:layout_constraintTop_toBottomOf="@id/hr" />

  <View
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="#1b1c38"
    android:paddingBottom="4dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/strip" />

  <ImageView
    android:id="@+id/logo"
    android:layout_width="69dp"
    android:layout_height="69dp"
    android:layout_marginTop="60dp"
    android:src="@drawable/ic_onyx_logo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/hr" />

  <com.google.android.material.tabs.TabLayout
    android:id="@+id/strip"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintWidth_percent=".7"
    app:tabBackground="@drawable/tab_background"
    app:tabIconTint="@color/tab_icon_tint"
    app:tabIndicator="@drawable/tab_indicator"
    app:tabIndicatorColor="@null" />

  <androidx.viewpager2.widget.ViewPager2
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/strip" />

  <androidx.constraintlayout.widget.Group
    android:id="@+id/strips"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:constraint_referenced_ids="viewPager,strip" />

  <FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/connectView"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logo">

    <fragment
      android:id="@+id/connectFragment"
      android:name="us.wmwm.onyx.ConnectFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>