<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:layout_width="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/awkward"
    app:layout_constraintStart_toStartOf="parent"
    android:padding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="@string/this_is_awkward_this_app_has_self_destructed_for_your_safety_please_dig_deep_into_the_cave_you_were_in_and_find_an_updated_version_no_app_for_you"
    android:layout_height="wrap_content"/>

  <TextView
    android:layout_width="0dp"
    app:layout_constraintTop_toBottomOf="@id/awkward"
    android:text="@string/okay_dad"
    android:minHeight="50dp"
    android:id="@+id/dismiss"
    android:background="@drawable/pink_purple_gradient"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>